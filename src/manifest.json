{
  "name": "Nextcloud Bookmarks",
  "version": "0.0.0.1",
  "description": "Browser extension for Nextcloud Bookmarks",
  "homepage_url": "https://github.com/saywebsolutions/nextcloud-bookmarks-browser-extension",
  "manifest_version": 2,

  "background": {
    "scripts": ["js/background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/FreedomMarks_dark_16x16.png",
      "24": "icons/FreedomMarks_dark_24x24.png",
      "32": "icons/FreedomMarks_dark_32x32.png",
      "48": "icons/FreedomMarks_dark_48x48.png",
      "96": "icons/FreedomMarks_dark_96x96.png"
    },
    "default_title": "Nextcloud Bookmarks",
    "default_popup": "extension.html",
    "theme_icons": [{
      "light": "icons/FreedomMarks_light_32x32.png",
      "dark": "icons/FreedomMarks_dark_32x32.png",
      "size": 32
    }, {
      "light": "icons/FreedomMarks_light_48x48.png",
      "dark": "icons/FreedomMarks_dark_48x48.png",
      "size": 48
    }]
  },

  "icons": {
    "16": "icons/FreedomMarks_dark_16x16.png",     
    "24": "icons/FreedomMarks_dark_24x24.png",        
    "32": "icons/FreedomMarks_dark_32x32.png",      
    "48": "icons/FreedomMarks_dark_48x48.png",
    "96": "icons/FreedomMarks_dark_96x96.png" 
  },

  "applications": {
    "gecko": {
      "id": "nextcloud-bookmarks-firefox-extension@saywebsolutions.com",
      "strict_min_version": "48.0"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "https://*/*"
  ]
}
